<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#B7C1C3"
    android:orientation="vertical"
    tools:context=".BlankFragment">



    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/cardviewbacround"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">



            <LinearLayout


                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2">


                <androidx.cardview.widget.CardView
                    android:id="@+id/count1"
                    app:cardCornerRadius="10dp"
                    android:layout_weight="1"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="8dp"
                    android:layout_width="200dp"
                    android:layout_height="200dp">


                    <com.airbnb.lottie.LottieAnimationView
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="20dp"
                        android:id="@+id/animation_view"

                        app:lottie_rawRes="@raw/count"
                        app:lottie_autoPlay="true"
                        app:lottie_loop="true"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="45dp"
                        android:fontFamily="@font/beth_ellen"
                        android:text="Count"

                        android:textColor="@color/black"
                        android:textSize="26dp"
                        android:textStyle="bold" />





                </androidx.cardview.widget.CardView>


                <androidx.cardview.widget.CardView
                    android:id="@+id/bmicard"
                    app:cardCornerRadius="10dp"
                    android:layout_weight="1"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="8dp"
                    android:layout_width="200dp"
                    android:layout_height="200dp">


                    <com.airbnb.lottie.LottieAnimationView
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="20dp"
                        android:id="@+id/ss"

                        app:lottie_rawRes="@raw/bmi"
                        app:lottie_autoPlay="true"
                        app:lottie_loop="true"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="45dp"
                        android:fontFamily="@font/almendra_bold_italic"
                        android:text="Bmi"
                        android:textColor="@color/black"
                        android:textSize="26dp"
                        android:textStyle="bold" />








                </androidx.cardview.widget.CardView>







            </LinearLayout>



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2">


                <androidx.cardview.widget.CardView
                    app:cardCornerRadius="10dp"
                    android:layout_weight="1"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="8dp"
                    android:layout_width="200dp"
                    android:layout_height="200dp">




                    <com.airbnb.lottie.LottieAnimationView
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="20dp"


                        app:lottie_rawRes="@raw/bill"
                        app:lottie_autoPlay="true"
                        app:lottie_loop="true"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="45dp"
                        android:fontFamily="@font/beth_ellen"
                        android:text="Bill"
                        android:textColor="@color/black"
                        android:textSize="26dp"
                        android:textStyle="bold" />







                </androidx.cardview.widget.CardView>




                <androidx.cardview.widget.CardView
                    app:cardCornerRadius="10dp"
                    android:layout_weight="1"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="8dp"
                    android:layout_width="200dp"
                    android:layout_height="200dp">





                    <com.airbnb.lottie.LottieAnimationView
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="20dp"


                        app:lottie_rawRes="@raw/store"
                        app:lottie_autoPlay="true"
                        app:lottie_loop="true"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="45dp"
                        android:fontFamily="@font/almendra_bold_italic"
                        android:text="Store Bill"
                        android:textColor="@color/black"
                        android:textSize="26dp"
                        android:textStyle="bold" />







                </androidx.cardview.widget.CardView>







            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2">


                <androidx.cardview.widget.CardView
                    app:cardCornerRadius="10dp"
                    android:layout_weight="1"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="8dp"
                    android:layout_width="200dp"
                    android:layout_height="200dp">



                    <com.airbnb.lottie.LottieAnimationView
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="20dp"

                        android:background="@drawable/cardviewbacround"
                        app:lottie_rawRes="@raw/voice"
                        app:lottie_autoPlay="true"
                        app:lottie_loop="true"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="45dp"
                        android:fontFamily="@font/almendra_bold_italic"
                        android:text="Tex to Voice"
                        android:textColor="@color/black"
                        android:textSize="26dp"
                        android:textStyle="bold" />








                </androidx.cardview.widget.CardView>




                <androidx.cardview.widget.CardView
                    app:cardCornerRadius="10dp"
                    android:layout_weight="1"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="8dp"
                    android:layout_width="200dp"
                    android:layout_height="200dp">


                    <com.airbnb.lottie.LottieAnimationView
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="20dp"

                        android:background="@drawable/cardviewbacround"
                        app:lottie_autoPlay="true"
                        app:lottie_loop="true"
                        app:lottie_rawRes="@raw/share" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="45dp"
                        android:fontFamily="@font/almendra_bold_italic"
                        android:text="Save Data"
                        android:textColor="@color/black"
                        android:textSize="26dp"
                        android:textStyle="bold" />







                </androidx.cardview.widget.CardView>







            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2">


                <androidx.cardview.widget.CardView
                    app:cardCornerRadius="10dp"
                    android:layout_weight="1"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="8dp"
                    android:layout_width="200dp"
                    android:layout_height="200dp">








                </androidx.cardview.widget.CardView>




                <androidx.cardview.widget.CardView
                    app:cardCornerRadius="10dp"
                    android:layout_weight="1"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="8dp"
                    android:layout_width="200dp"
                    android:layout_height="200dp">








                </androidx.cardview.widget.CardView>







            </LinearLayout>







        </LinearLayout>











    </ScrollView>











</LinearLayout>